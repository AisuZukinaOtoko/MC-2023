<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbg"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BackButton"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:layout_gravity="start"
        android:layout_weight="0"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myCardView4"
        android:layout_margin="30dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="30dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext_curved"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/StudentNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:hint="Enter Student Number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/SecurityQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Security Questions:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. What is the name of your favourite teacher in high school?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/answer1"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:hint="Enter Answer Here"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2. What is the name of the city where you were born?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/answer2"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:hint="Enter Answer Here"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="3. What is the name of your favourite first-year lecturer?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/answer3"
                android:layout_width="228dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:hint="Enter Answer Here"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <Button
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:id="@+id/SubmitButton"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Submit"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:backgroundTint="@color/blue_grey"
                app:cornerRadius = "10dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>